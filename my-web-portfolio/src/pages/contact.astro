---
import { Icon } from 'astro-icon/components';
import ContactForm from '../components/ContactForm.astro';
import Layout from '../layouts/Layout.astro';
import SectionLayout from '../layouts/SectionLayout.astro';
import AboutInfoBlockLayout from '../layouts/AboutInfoBlockLayout.astro';
import Divider from '../components/Divider.astro';
import FAQ from '../components/FAQ.astro';

const FAQsData = [
	{
		question: "Are you open for freelance/contract work?",
		answer: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Et tortor velit morbi integer sed orci, suspendisse quis. Turpis quis id eget feugiat."
	},
	{
		question: "Are you currently looking for full-time opportunities?",
		answer: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Et tortor velit morbi integer sed orci, suspendisse quis. Turpis quis id eget feugiat."
	},
	{
		question: "Are you open for guest-posts or article collaborations?",
		answer: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Et tortor velit morbi integer sed orci, suspendisse quis. Turpis quis id eget feugiat."
	},
	{
		question: "Are you open for video collaborations?",
		answer: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Et tortor velit morbi integer sed orci, suspendisse quis. Turpis quis id eget feugiat."
	},
]
const socialProfiles = [
	{
		iconName: "mdi:facebook-box",
		name: "Facebook",
		profileLink: "/#"
	},
	{
		iconName: "mdi:twitter-box",
		name: "Twitter/X",
		profileLink: "/#"
	},
	{
		iconName: "mdi:linkedin-box",
		name: "LinkedIn",
		profileLink: "/#"
	},
	{
		iconName: "mdi:instagram",
		name: "Instagram",
		profileLink: "/#"
	},
	{
		iconName: "mdi:github",
		name: "Github",
		profileLink: "https://github.com/Keanin-Cupido"
	},
	{
		iconName: "mdi:codepen",
		name: "Codepen",
		profileLink: "/#"
	}
]
---

<Layout title="Keanin Cupido - Contact">
    <main class="main--contact">
        <SectionLayout 
			heading="Contact" 
			subheading="Ready to bring your web project to life? I’m here to help! With a passion for React and a strong foundation in various frontend technologies, I’m eager to collaborate and create something amazing together. Whether you have a question, need a consultation, or want to discuss a new idea, feel free to reach out."
		>
			<div class="contact-container">
				<span class="email">
					<p>keanin16@gmail.com</p>
					<Icon name="mdi:email" />
				</span>
				<ContactForm />
			</div>
        </SectionLayout>

		<Divider />
		<!-- FAQs -->
		<div class="flex flex-col items-start justify-between gap-12 px-8">
			<h3 class="text-[2rem] font-black">FAQs</h3>

			<div class="flex flex-col items-start justify-start gap-8">
				{
					FAQsData.map(faq => {
						return (
							<FAQ 
								question={faq.question}
								answer={faq.answer}
							/>
						)
					})
				}
			</div>
		</div>

		<Divider />

		<div class="px-8">
			<AboutInfoBlockLayout
				title='My Social Profiles'
				subTitleA=""
				subTextA=''
				subTitleB=''
				subTextB=''
			>
				<div class="w-full grid grid-cols-4 gap-8">

					{
						socialProfiles.map(social => {
							return (
								<a href={social.profileLink} class="icon-container flex gap-2 items-center justify-start text-lg hover:opacity-70" target='_blank' rel='noopener noreferrer'>
									<Icon name={social.iconName}/>
									<p>{social.name}</p>
									<Icon name='mdi:arrow-top-right'/>
								</a>
							)
						})
					}
				</div>
			</AboutInfoBlockLayout>
		</div>
    </main>
</Layout>

<style>
	.main--contact {
		width: 100%;
		max-width: 1000px;
		margin: 4.25em auto;

		.contact-container {
			width: 100%;
			max-width: 1000px;
			margin: 0 auto;
			display: flex;
			flex-direction: column;
			align-items: flex-start;
			justify-content: flex-start;
			gap: 2em;
			
			.email {
				width: 100%;
				max-width: fit-content;
				display: flex;
				flex-direction: row;
				align-items: center;
				justify-content: center;
				gap: 0.5em;
				opacity: 0.85;
				font-size: 0.9rem;
				font-weight: 300;
			}
		}
	}
</style>