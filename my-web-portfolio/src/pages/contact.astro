---
import { Icon } from 'astro-icon/components';
import ContactForm from '../components/ContactForm.astro';
import Layout from '../layouts/Layout.astro';
import SectionLayout from '../layouts/SectionLayout.astro';
import AboutInfoBlockLayout from '../layouts/AboutInfoBlockLayout.astro';
import Divider from '../components/Divider.astro';
import FAQ from '../components/FAQ.astro';

const FAQsData = [
	{
		question: "Are you currently open to new job opportunities?",
		answer: "Yes, I'm actively seeking new challenges in frontend development, particularly roles that involve React and modern web technologies."
	},
	{
		question: "What type of roles are you interested in?",
		answer: "I'm primarily interested in frontend developer positions, but I'm also open to full-stack roles that have a strong frontend focus."
	},
	{
		question: "Are you open to relocation or remote work?",
		answer: "I'm open to both local and remote opportunities. For the right position, I'm also willing to consider relocation."
	},
	{
		question: "What's your preferred way to be contacted by recruiters?",
		answer: "The best way to reach me is via email or LinkedIn. I typically respond within 24-48 hours."
	},
]
const socialProfiles = [
	{
		iconName: "mdi:facebook-box",
		name: "Facebook",
		profileLink: "/#"
	},
	{
		iconName: "mdi:twitter-box",
		name: "Twitter/X",
		profileLink: "/#"
	},
	{
		iconName: "mdi:linkedin-box",
		name: "LinkedIn",
		profileLink: "https://www.linkedin.com/in/your-linkedin-profile" // Update with your actual LinkedIn profile
	},
	{
		iconName: "mdi:instagram",
		name: "Instagram",
		profileLink: "/#"
	},
	{
		iconName: "mdi:github",
		name: "Github",
		profileLink: "https://github.com/Keanin-Cupido"
	},
	{
		iconName: "mdi:codepen",
		name: "Codepen",
		profileLink: "/#"
	}
]
---

<Layout title="Contact">
    <main class="main--contact px-8 lg:px-16">
        <SectionLayout 
			heading="Contact" 
			subheading="Thank you for your interest in my profile. As a passionate frontend developer with expertise in React and various modern web technologies, I'm excited about new opportunities to contribute to innovative projects. Whether you're a recruiter looking to fill a position or a potential collaborator, I'm eager to connect!"
		>
			<div class="contact-container">
				<span class="email">
					<p>keanin16@gmail.com</p>
					<Icon name="mdi:email" />
				</span>
				<ContactForm />
			</div>
        </SectionLayout>

		<Divider />
		<!-- FAQs -->
		<div class="flex flex-col items-start justify-between gap-12 px-8">
			<h3 class="text-[2rem] font-black">FAQs</h3>

			<div class="flex flex-col items-start justify-start gap-8">
				{
					FAQsData.map(faq => {
						return (
							<FAQ 
								question={faq.question}
								answer={faq.answer}
							/>
						)
					})
				}
			</div>
		</div>

		<Divider />

		<div class="px-8">
			<AboutInfoBlockLayout
				title='Professional Profiles'
				subTitleA="Let's Connect"
				subTextA='Feel free to reach out or check my professional profiles for more information about my work and experience.'
			>
				<div class="w-full grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 sm:gap-8">

					{
						socialProfiles.map(social => {
							return (
								<a href={social.profileLink} class="icon-container flex gap-2 items-center justify-start text-base sm:text-lg hover:opacity-70" target='_blank' rel='noopener noreferrer'>
									<Icon name={social.iconName}/>
									<p class="sm:inline">{social.name}</p>
									<Icon name='mdi:arrow-top-right' class="hidden sm:inline"/>
								</a>
							)
						})
					}
				</div>
			</AboutInfoBlockLayout>
		</div>
    </main>
</Layout>

<style>
	.main--contact {
		width: 100%;
		max-width: 1400px;
		margin: 4.25em auto;

		.contact-container {
			width: 100%;
			margin: 0 auto;
			display: flex;
			flex-direction: column;
			align-items: flex-start;
			justify-content: flex-start;
			gap: 2em;
			
			.email {
				width: 100%;
				max-width: fit-content;
				display: flex;
				flex-direction: row;
				align-items: center;
				justify-content: center;
				gap: 0.5em;
				opacity: 0.85;
				font-size: 0.9rem;
				font-weight: 300;
			}
		}
	}
</style>