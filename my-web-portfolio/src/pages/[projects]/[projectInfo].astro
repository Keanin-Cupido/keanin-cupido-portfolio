---
import Layout from '../../layouts/Layout.astro';
import projectsData from '../../data/projectsData';
import ProjectInfoLayout from '../../layouts/ProjectInfoLayout.astro';

let projectInfoObj = {
  id: 0,
  title: "Content Writing Website", 
  summary: "Gorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam eu turpis molestie, dictum est a, mattis tellus. Gorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam eu turpis.",
  techStack: ["react", "supabase", "tailwindcss"],
  projectImgName: "default.jpg",
  projectImgAlt: "project",
  projectImgW: 475,
  projectImgH: 156,
  githubLink: "https://github.com/Keanin-Cupido",
  liveLink: "https://github.com/Keanin-Cupido",
  featured: true,
  projectsPage: true,
};

projectsData.map((project)=>{
  Number(Astro.url.pathname.split("/")[2]) === project.id
  ? projectInfoObj = project
  : null
})

---

<Layout title={''}}>
  <ProjectInfoLayout 
    id={projectInfoObj.id}
    title={projectInfoObj.title} 
    summary={projectInfoObj.summary}
    techStack={projectInfoObj.techStack}
    projectImgName={projectInfoObj.projectImgName}
    projectImgAlt={projectInfoObj.projectImgAlt}
    projectImgW={projectInfoObj.projectImgW}
    projectImgH={projectInfoObj.projectImgH}
    githubLink={projectInfoObj.githubLink}
    liveLink={projectInfoObj.liveLink}
    featured={projectInfoObj.featured}
    projectsPage={projectInfoObj.projectsPage}
  />
</Layout>