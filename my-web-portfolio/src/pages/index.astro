---
import Layout from '../layouts/Layout.astro';
import Divider from '../components/Divider.astro';
import SectionLayout from '../layouts/SectionLayout.astro';
import Image from 'astro/components/Image.astro';
import Button from '../components/Button.astro';
import CardTechStack from '../components/CardTechStack.astro';
import techStack from '../data/techStack';
import { Icon } from 'astro-icon/components';
import ContactForm from '../components/ContactForm.astro';
import FeaturedProject from '../components/FeaturedProject.astro';
import FeaturedProjectCard from '../components/FeaturedProjectCard.astro';
import BlogCard from '../components/BlogCard.astro';
import blogPosts from '../data/blogPosts';

// Images
import frontendLogo from '../../public/frontend.svg';
import logo from '../../public/logo.svg';

// Data
import projectsData from '../data/projectsData';

---

<Layout title="Home">
	<main class="main--home min-h-screen px-8 lg:px-16">
		<header class="header" transition:animate="fade">

			<Image src={logo} alt={"logo"} width={65} height={65} class="mb-6 animate-waving-hand" loading="eager" />

			<h2 class="title--one">Hi, I'm</h2>
			<h2 class="title--two">{'{'}Keanin Cupido{'}'}</h2>
			<h2 class="title--three">
				<Image 
					loading="eager"
					src={frontendLogo}
					alt={"logo"}
					width={77.24}
					height={51.57}
					class={"frontend_logo animate-pulse"}
				/>
				WEB DEVELOPER
			</h2>
			<p class="header_summary">A <b>web developer</b> creating elegant, <b>user-friendly</b> websites. Explore <a href="/projects" class="link"><u>my work</u></a> and discover how I turn ideas into seamless online experiences. </p>
			<div class="socials mb-8">
				<a href="https://github.com/Keanin-Cupido" target="_blank" rel="noopener noreferrer" aria-label="github">
					<Icon name="mdi:github" />
				</a>
				<a href="http://" target="_blank" rel="noopener noreferrer" aria-label="twitter/x">
					<Icon name="mdi:twitter" />
				</a>
				<a href="http://" target="_blank" rel="noopener noreferrer" aria-label="codepen">
					<Icon name="mdi:codepen" />
				</a>
				<a href="http://" target="_blank" rel="noopener noreferrer" aria-label="linkedin">
					<Icon name="mdi:linkedin" />           
				</a>
			</div>

			<!-- Add a call-to-action button -->
			<Button title="View My Projects" link="/projects" variant='primary' newTab={false}/>
		</header>

		<Divider />

		<!-- Key Skills Section -->
		<SectionLayout
			heading='Key Skills'
			subheading='Core competencies that make me stand out as a web developer'
		>
			<div class="w-full skills-grid">
				<div class="skill-item">
					<Icon name="mdi:react" />
					<h3>React & React Native</h3>
					<p>Expert in building responsive web and mobile applications</p>
				</div>
				<div class="skill-item">
					<Icon name="mdi:language-javascript" />
					<h3>JavaScript & TypeScript</h3>
					<p>Strong foundation in modern JavaScript and TypeScript development</p>
				</div>
				<div class="skill-item">
					<Icon name="mdi:responsive" />
					<h3>Responsive Design</h3>
					<p>Creating seamless experiences across all devices</p>
				</div>
				<div class="skill-item">
					<Icon name="mdi:responsive" />
					<h3>Responsive Design</h3>
					<p>Creating seamless experiences across all devices</p>
				</div>
				<!-- Add more skill items as needed -->
			</div>
		</SectionLayout>

		<Divider />

		<!-- Featured Work -->
		 <SectionLayout
		 	heading='Featured Work'
			subheading='Discover my featured projects showcasing the best of my work in web development. Each project highlights my skills in React, JavaScript, and creating intuitive user interfaces.'
		 >
		 	{
				projectsData.map(project => {
					return (project.featured === true
						? <FeaturedProject 
							title={project.title} 
							summary={project.summary}
							techStack={project.techStack}
							projectImgName={project.projectImgName}
							projectImgAlt={project.projectImgAlt}
							projectImgW={project.projectImgW}
							projectImgH={project.projectImgH}
							githubLink={project.githubLink}
							liveLink={project.liveLink}
							featured={project.featured}
							left={project.left}
						  /> 
						: null
					)
				})
			}
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				<FeaturedProjectCard 
					id={1}
					title="E-commerce Platform"
					summary="A modern e-commerce platform built with React and Node.js, featuring a responsive design and seamless payment integration."
					techStack={["react", "nodejs", "mongodb"]}
					projectImgName="/src/assets/projectImages/default.jpg"
					projectImgAlt="E-commerce Platform Screenshot"
					projectImgW={1200}
					projectImgH={630}
					githubLink="https://github.com/username/ecommerce-project"
					liveLink="https://ecommerce-project.com"
					featured={true}
				/>

				<FeaturedProjectCard 
					id={2}
					title="Task Management App"
					summary="A productivity-focused task management application built with React Native, offering cross-platform functionality and real-time updates."
					techStack={["react", "firebase", "redux"]}
					projectImgName="/src/assets/projectImages/default.jpg"
					projectImgAlt="Task Management App Screenshot"
					projectImgW={1200}
					projectImgH={630}
					githubLink="https://github.com/username/task-management-app"
					liveLink="https://taskmanagementapp.com"
					featured={true}
				/>
			</div>
			<Button title="View More" link="/projects" variant='primary' newTab={false}/>
		 </SectionLayout>

		<Divider />

		<!-- Featured Blog Posts -->
		<SectionLayout
			heading='Featured Articles'
			subheading='Explore my latest thoughts and insights on web development, technology trends, and more.'
		>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				{blogPosts.slice(0, 3).map(post => (
					<BlogCard 
						title={post.title}
						excerpt={post.excerpt}
						date={post.date}
						slug={post.slug}
						image={post.image}
					/>
				))}
			</div>
			<div class="mt-8 text-center">
				<Button title="Read More Articles" link="/blog" variant='primary' newTab={false}/>
			</div>
		</SectionLayout>

		<Divider />

		<!-- About Me -->
		<SectionLayout
			heading='About Me'
			subheading='A passionate web developer with a strong academic background and diverse skill set'
		>
			<div class="image-container w-full h-[300px] bg-[rgb(var(--light-blue))] rounded-xl flex items-center justify-center opacity-85">
				<Image src={'/logo.svg'} alt={'Keanin Cupido'} width={175} height={175} loading="lazy" />
			</div>
		 	<div class="about_me_section">
				<p>I'm a web developer specializing in frontend technologies with strong skills in <b>React</b> and <b>JavaScript</b>. I focus on creating intuitive, responsive websites and staying updated with the latest web development trends and best practices.
				I also have a keen interest in mobile app development using <b>React Native</b>. This enables me to create versatile mobile applications alongside my web projects, bridging the gap between web and mobile experiences.
				</p>
				<p>I studied computer science at the University of the Western Cape, where I completed modules in <b>Human-Computer Interaction</b>, <b>Data Structures and Algorithms</b>, <b>Databases</b>, and <b>Software Engineering</b>. Additionally, I have experience with languages like <b>Python</b> and <b>Java</b>, and I am currently learning the <b>Rust</b> programming language.</p>
			</div>

			<!-- Add a section highlighting education and relevant coursework -->
			<div class="w-full mt-4 p-6 bg-[rgba(var(--very-light-blue),0.05)] rounded-lg">
				<h3 class="text-xl font-semibold mb-2">Education</h3>
				<p class="mb-1"><strong class="font-medium">University of the Western Cape</strong> - Computer Science</p>
				<p class="text-sm text-gray-300">Relevant Coursework: Human-Computer Interaction, Data Structures and Algorithms, Databases, Software Engineering</p>
			</div>

			<!-- Add a section highlighting skills and expertise -->
			<div class="w-full mt-2 p-6 bg-[rgba(var(--very-light-blue),0.05)] rounded-lg">
				<h3 class="text-xl font-semibold mb-2">Skills & Expertise</h3>
				<p  class="mb-1"><strong class="font-medium">Frontend Development: </strong><span class="text-sm text-gray-300">React, JavaScript, HTML, CSS, Sass</span></p>
				<p  class="mb-1"><strong class="font-medium">Mobile Development: </strong><span class="text-sm text-gray-300">React Native</span></p>
				<p><strong class="font-medium">Other Languages: </strong><span class="text-sm text-gray-300">Python, Java, Rust (learning)</span></p>
			</div>

			<!-- Add a section for professional development and certifications -->
			<div class="w-full mt-2 p-6 bg-[rgba(var(--very-light-blue),0.05)] rounded-lg">
				<h3 class="text-xl font-semibold mb-4">Professional Development & Certifications</h3>
				<ul class="list-disc list-inside space-y-2">
					<li>Completed Advanced React and Redux course on Udemy, enhancing frontend development skills</li>
					<li>Obtained AWS Certified Developer - Associate certification, demonstrating cloud computing expertise</li>
					<li>Participated in Google's "Mobile Web Specialist" nanodegree program, focusing on progressive web apps</li>
					<li>Regular attendee at local tech meetups and conferences, staying current with industry trends</li>
				</ul>
			</div>
			
			<Button title="Download CV" link="/" variant='primary' newTab={false}/>
		</SectionLayout>

		<Divider />

		<!-- My Techstack -->
		 <SectionLayout
		 	heading='My Techstack'
			subheading='My tech stack focuses on frontend technologies like React, TypeScript, Next.js, and Astro.js, with strong skills in HTML, CSS, and Sass. I also develop mobile apps using React Native and have experience with Python, Java, and am currently learning Rust.'
		 >
		 	<div class="techStack-container">
				{
					techStack.map(tech => (
						<CardTechStack 
							icon={tech.icon},
							name={tech.name},
							description={tech.description},
							btnInfo={tech.btnInfo}
						/>
					))
				}
			</div>
		 </SectionLayout>

		<Divider />

		<!-- Contact -->
		<SectionLayout
			heading='Contact'
			subheading="I'd love to hear from you! Whether you have a project in mind, a question, or just want to connect, feel free to reach out. You can contact me via email or through the contact form below."
		>
			<div class="contact-container">
				<span class="email">
					<p>keanin16@gmail.com</p>
					<Icon name="mdi:email" />
				</span>
				<ContactForm />
			</div>
		</SectionLayout>
	</main>
</Layout>

<style>
	.main--home {
		width: 100%;
		margin: 4.25em auto;
	}
	.main--home .header {
		width: 100%;
		text-align: center;
		line-height: 1;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: .5em;
		& .header_summary .link:hover {
        	color: white;
    	}
		& h2.title--one {
			font-size: 0.75rem;
			font-weight: 500;
		}
		& h2.title--two {
			font-size: 1.5rem;
			font-weight: 600;
		}
		& h2.title--three {
			position: relative;
			font-size: 4.25rem;
			font-weight: 900;
		}
		& h2.title--three .frontend_logo {
			position: absolute;
			top: -0.35em;
			left: -1.25em;
		}
		& .header_summary {
			font-size: 1rem;
			color: rgb(var(--very-light-blue));
			width: 100%;
			max-width: 500px;
			margin: 0 auto;
			line-height: 1.4;
		}
		& .header_summary .link {
			transition: all 0.2s ease;
		}
		& .socials {
			margin-top: 2em;
			display: flex;
			flex-direction: row;
			align-items: center;
			justify-content: center;
			gap: 1.5em;
		}
		& .socials > a > :first-child {
			cursor: pointer;
			font-size: 1.35rem;
			transition: all 0.2s ease;
			color: white;
		}
		& .socials > a > :first-child:hover {
			transform: translateY(-3px);
		}
	}
	/* About Summary */
	.main--home .about_summary {
		width: 100%;
		max-width: 700px;
		margin: 10em auto;
		font-weight: 600;
		font-size: 1rem;
		text-align: center;
		color: rgb(var(--very-light-blue));
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 2em;
	}
	/* About Me */
	.main--home .about_me_section {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: center;
		gap: 1em;
		width: 100%;
		text-align: left;
		& > p {
			font-size: 1rem;
			font-weight: 300;
			color: rgb(var(--very-light-blue));
		}
		& > p > b {
			font-weight: 700;
		}
	}
	/* TechStack */
	.main--home .techStack-container {
		width: 100%;
		display: flex;
		flex-wrap: wrap;
		flex-direction: row;
		align-items: flex-start;
		justify-content: flex-start;
		gap: 1em;
	}
	/* Contact */
	.main--home .contact-container {
		width: 100%;
		/* max-width: 1000px; */
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		justify-content: flex-start;
		gap: 2em;
		& .email {
			width: 100%;
			max-width: fit-content;
			display: flex;
			flex-direction: row;
			align-items: center;
			justify-content: center;
			gap: 0.5em;
			opacity: 0.85;
			font-size: 0.9rem;
			font-weight: 300;
		}
		& .form {
			width: 100%;
			/* max-width: 674px; */
			padding: 4em 4em;
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			gap: 2em;
			border-radius: 15px;
			border-top: 1px solid rgba(47, 179, 255, 0.25);
			background-color: rgba(var(--very-light-blue), 0.015);
			transition: all 0.3s ease-in-out;
			&:hover {
				background-color: rgba(var(--very-light-blue), 0.05);
			}
			& .input {
				width: 100%;
				display: flex;
				flex-direction: column;
				align-items: flex-start;
				justify-content: space-between;
				gap: 1.5em;
				text-align: left;
				& label {
					font-size: 1.15rem;
				}
			}
			& input[type="number"]::-webkit-outer-spin-button, 
			& input[type="number"]::-webkit-inner-spin-button {
				-webkit-appearance: none;
				margin: 0;
			}
			& input[type="number"] {
				-moz-appearance: textfield;
			}
			& input {
				font-family: inherit;
				font-weight: 200;
				width: 100%;
				max-width: 350px;
				padding: 0.5em 0em 0.5em 0em;
				background: transparent;
				border: none;
				outline: none;
				border-bottom: 2px solid rgba(var(--very-light-blue), 0.075);
				transition: all 0.3s ease-in-out;

				&:focus, &:valid {
					border-bottom: 2px solid rgba(var(--very-light-blue), 0.5);
				}

				&:-webkit-autofill,
				&:-webkit-autofill:focus {
					border-bottom: 2px solid rgba(var(--very-light-blue), 0.5);
					transition: background-color 0s 600000s, color 0s 600000s !important;
				}
			}
			& textarea {
				font-family: inherit;
				width: 100%;
				height: 150px;
				max-height: 300px;
				padding: 0.5em 0em 0.5em 0em;
				font-weight: 200;
				background: transparent;
				border: none;
				outline: none;
				border-bottom: 2px solid rgba(var(--very-light-blue), 0.075);
				transition: all 0.3s ease-in-out;

				&:focus, &:valid {
					border-bottom: 2px solid rgba(var(--very-light-blue), 0.5);
				}
			}
			& .top, & .middle {
				width: 100%;
				display: flex;
				flex-direction: row;
				align-items: center;
				justify-content: space-between;
				gap: 1.5em;
			}
			& .bottom {
				width: 100%;
				display: flex;
				flex-direction: column;
				align-items: flex-start;
				justify-content: space-between;
				gap: 2em;
				& > button {
					text-align: left;
					width: 100%;
					display: flex;
					flex-direction: row;
					align-items: center;
					justify-content: center;
					gap: 0.5em;
					&:hover {
						opacity: 0.5;
						& :first-child() {
							transition: all 0.3s ease-in-out;
							transform: translate(3px, -3px);
						}
					}
				}
			}
		}
	}

	/* <= 320px */
	@media (0px <= width <= 320px) {
		.main--home .header {
			& h2.title--two {
				font-size: 1rem;
			}
			& h2.title--three {
				font-size: 2rem;
			}
			& h2.title--three .frontend_logo {
				transform: scale(0.5) rotate(20deg);
				top: -1.5em;
				left: -0.75em;
			}
			& .header_summary {
				font-size: 0.8rem;
				width: 80%;
				max-width: 300px;
			}
		}
		.main--home .about_summary {
			width: 80%;
			max-width: 700px;
			font-size: 0.7rem;
		}
		.main--home .techStack-container {
			flex-direction: column;
			align-items: center;
			justify-content: center;
		}
		.main--home .about_me_section {
			width: 90%;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			text-align: center;
		}
		.main--home .contact-container {
			& .email {
				max-width: none;
			}
		}
		.main--home .contact-container {
			& .form {
				padding: 2em 1.5em;
				& .top, & .middle {
					flex-direction: column;
				}
			}
		}
    }

    /* <= 375px */
    @media (321px <= width <= 375px) {
		.main--home .header {
			& h2.title--two {
				font-size: 1.15rem;
			}
			& h2.title--three {
				font-size: 2.15rem;
			}
			& h2.title--three .frontend_logo {
				transform: scale(0.5) rotate(20deg);
				top: -1.5em;
				left: -1em;
			}
			& .header_summary {
				font-size: 0.825rem;
				width: 80%;
				max-width: 300px;
			}
		}
		.main--home .about_summary {
			width: 80%;
			max-width: 700px;
			font-size: 0.7rem;
		}
		.main--home .techStack-container {
			flex-direction: column;
			align-items: center;
			justify-content: center;
		}
		.main--home .about_me_section {
			width: 90%;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			text-align: center;
		}
		.main--home .contact-container {
			& .email {
				max-width: none;
			}
		}
		.main--home .contact-container {
			& .form {
				padding: 2em 1.5em;
				& .top, & .middle {
					flex-direction: column;
				}
			}
		}
    }

    /* <= 425px */
    @media (376px <= width <= 425px) {
		.main--home .header {
			& h2.title--two {
				font-size: 1.5rem;
			}
			& h2.title--three {
				font-size: 2.5rem;
			}
			& h2.title--three .frontend_logo {
				transform: scale(0.65) rotate(20deg);
				top: -1.5em;
				left: -1.05em;
			}
			& .header_summary {
				font-size: 0.85rem;
				width: 80%;
				max-width: 300px;
			}
		}
		.main--home .about_summary {
			width: 80%;
			max-width: 700px;
			font-size: 0.7rem;
		}
		.main--home .techStack-container {
			flex-direction: column;
			align-items: center;
			justify-content: center;
		}
		.main--home .about_me_section {
			width: 90%;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			text-align: center;
		}
		.main--home .contact-container {
			& .email {
				max-width: none;
			}
		}
		.main--home .contact-container {
			& .form {
				padding: 2.5em 2em;
				& .top, & .middle {
					flex-direction: column;
				}
			}
		}
    }

    /* <= 768px */
    @media (426px <= width <= 768px) {
		.main--home .header {
			& h2.title--two {
				font-size: 1.5rem;
			}
			& h2.title--three {
				font-size: 3.5rem;
			}
			& h2.title--three .frontend_logo {
				transform: scale(0.75) rotate(5deg);
				top: -0.5em;
				left: -1.35em;
			}
			& .header_summary {
				font-size: 0.9rem;
				width: 80%;
				max-width: 400px;
			}
		}
		.main--home .about_summary {
			width: 80%;
			max-width: 700px;
			font-size: 0.7rem;
		}
		.main--home .techStack-container {
			width: 80%;
			flex-direction: row;
			align-items: center;
			justify-content: center;
			gap: 2em;
		}
		.main--home .about_me_section {
			width: 90%;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			text-align: center;
		}
		.main--home .contact-container {
			& .email {
				max-width: none;
			}
		}
    }

    /* <= 1024px */
    @media (769px <= width <= 1024px) {
		.main--home .about_me_section {
			width: 90%;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			text-align: left;
		}
    }

	.skills-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2em;
		margin-top: 2em;
	}

	.skill-item {
		text-align: center;
		padding: 1.5em;
		background-color: rgba(var(--very-light-blue), 0.05);
		border-radius: 10px;
