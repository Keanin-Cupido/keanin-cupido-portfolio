---
interface Props {
    id?: number;
    title?: string;
    summary?: string;
    techStack?: string[];
    projectImgName?: string;
    projectImgAlt?: string;
    projectImgW?: number;
    projectImgH?: number;
    githubLink?: string;
    liveLink?: string;
    projectInfo?: string;
    featured?: boolean;
    projectsPage?: boolean;
}

const {
    id=0,
    title="Content Writing Website", 
    summary="Gorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam eu turpis molestie, dictum est a, mattis tellus. Gorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam eu turpis.",
    techStack=["react", "supabase", "tailwindcss"],
    projectImgName="/src/assets/projectImages/default.jpg",
    projectImgAlt="project",
    projectImgW=475,
    projectImgH=156,
    githubLink="https://github.com/Keanin-Cupido",
    liveLink="https://github.com/Keanin-Cupido",
    featured=true,
    projectsPage=true,
} = Astro.props;

import Image from 'astro/components/Image.astro';
import type { ImageMetadata } from 'astro';
import Button from './Button.astro';
import { Icon } from 'astro-icon/components'

const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/projectImages/*.{jpeg,jpg,png,gif}');
if (!images[projectImgName]) throw new Error(`"${projectImgName}" does not exist in glob: "/src/assets/projectImages/*.{jpeg,jpg,png,gif}"`);
---

<article class=`card_project ${ Astro.url.pathname.split("/")[1] === "projects" ? 'card_project--portfolio' : 'card_project--featured'}`>
    <div class="top">
        <div class="info">
            <h3 class="title">{title}</h3>
            <p class="summary">{summary}</p>
            <Button
                title='More Info'
                link={`/projects/${id}`}
                primary={true}
                newTab={false}
            />
        </div>
        <div class="image">
            <Image src={images[projectImgName]()} alt={projectImgAlt} width={projectImgW} height={projectImgH} />
        </div>
    </div>
    <div class="bottom">
        <div class="tech_stack">
            {
                techStack.map(tech => (
                    <a href="javascript:void(0)">
                        <Icon class="icon" name=`devicon:${tech}` />
                    </a>
                ))
            }
        </div>
        <div class="links">
            <a href={githubLink} target="_blank" rel="noopener noreferrer">
                <i class=`fa-brands fa-github`></i>
            </a>
            <Button
                title='Visit Live'
                link={liveLink}
                primary={false}
            />
        </div>
    </div>
</article>

<style>
    .card_project {
        width: 100%;
        max-width: 1000px;
        height: 100%;
        max-height: 400px;
        background: rgba(71, 120, 183, 0.1);
        border-top: 1px solid rgba(47, 179, 255, 0.25);
        border-radius: 40px;
        padding: 3em 3.5em;
        transition: all 0.3s ease-in-out;
        &:hover {
            transform: scale(1.015);
            background: rgba(71, 120, 183, 0.2);
                & .top .image {
                    opacity: 1;
                    -webkit-filter: (0%); /* Safari 6.0 - 9.0 */
                    filter: grayscale(0%);
            }
        }
        
        & .top .image {
            transition: all 0.3s ease-in-out;
            width: 475px;
            height: 180px;
            opacity: 0.5;
            -webkit-filter: (80%); /* Safari 6.0 - 9.0 */
            filter: grayscale(80%);
        }
    }
    .card_project .top {
        width: 100%;
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        justify-content: space-between;
        gap: 0.5em;
    }
    .card_project .top .info {
        text-align: left;
    }
    .card_project .bottom {
        width: 100%;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 0.5em;
    }
    .card_project .bottom .tech_stack {
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        justify-content: flex-start;
        gap: 1em;
    }
    .card_project .bottom .tech_stack > a {
        font-size: 1.25em;
    }
    .card_project .bottom .links {
        display: flex;
        flex-direction: row;
        align-items: flex-end;
        justify-content: flex-end;
        gap: 1em;
    }
    .card_project .bottom .links > a {
        font-size: 1.25em;
    }

    /* Featured Card */
    .card_project--featured {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        gap: 2em;
        
        & .info {
            width: 100%;
            max-width: 342px;
            min-height: 180px;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: space-between;
            gap: 0.5em;
        }
        & .info h3.title {
            font-weight: 600;
            font-size: 1.5rem;
        }
        & .info p.summary {
            font-weight: 200;
            font-size: 1rem;
        }
        & .top {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            gap: 0.5em;
        }
        & .top .image > img {
            border-radius: 27px;
            width: 100%;
            height: 100%;
            object-position: top;
            object-fit: cover;
        }
    }

    /* -====================================================- */

    /* Projects Card */
    .card_project--portfolio {
        padding: 0;
        width: 100%;
        max-width: 320px;
        height: 335px;
        border-radius: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        gap: 1em;
        position: relative;

        &:hover {
            transform: scale(1.015);
            background: rgba(71, 120, 183, 0.2);
            & .top .info {
                opacity: 1;
            }
            & .top .image {
                opacity: 0.05;
            }
            & .bottom {
                opacity: 1;
            }
        }

        & .top .info {
            opacity: 0;
        }

        & .top .image {
            transition: all 0.3s ease-in-out;
            width: 475px;
            height: 180px;
            opacity: 0.9;
            -webkit-filter: (0%); /* Safari 6.0 - 9.0 */
            filter: grayscale(0%);
            border-radius: 15px;
            background: #539DFE;

            & > img {
                object-position: bottom !important;
                object-fit: contain !important;
            }
        }
        & .bottom {
            opacity: 0;
        }
    }
    .card_project--portfolio .info {
        width: 100%;
        max-width: 342px;
        min-height: fit-content;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: space-between;
        gap: 0.5em;
        position: absolute;
        padding: 1em;
        top: 1em;
        left: 1em;
    }
    .card_project--portfolio .info h3.title {
        width: 100%;
        font-weight: 600;
        font-size: 1.15rem;
    }
    .card_project--portfolio .info p.summary {
        width: 100%;
        font-weight: 200;
        font-size: 0.9rem;
    }
    .card_project--portfolio .top {
        width: 100%;
        max-width: 400px;
        height: 100%;
        display: flex;
        flex-direction: column-reverse;
        align-items: center;
        justify-content: space-between;
        gap: 0.5em;
        top: 0;
    }
    .card_project--portfolio .bottom {
        /* height: 100%; */
        position: absolute;
        bottom: 0em;
        padding: 1em 2em;

        & .tech_stack {
            gap: 0.5em;

            & > a {
                font-size: 0.9rem;
            }
        }
    }
    .card_project--portfolio .top .image {
        width: 100%;
        max-width: 400px;
        height: 100%;

        & > img {
            border-radius: 15px;
            width: 100%;
            height: 100%;
            object-position: top;
            object-fit: cover;
        }
    }

    .card_project .bottom .tech_stack a {
        cursor: default;
    }

    /* ==== Media Queries ==== */
    @media (0px <= width <= 320px) {
        .card_project .top {
            display: flex;
            flex-direction: column-reverse;
            align-items: center;
            justify-content: space-between;
        }
        .card_project {
            width: 100%;
            max-width: 1000px;
            height: 100%;
            max-height: 800px;
            padding: 1.75em 1.75em;
            
            & .top .image {
                transition: all 0.3s ease-in-out;
                width: 100%;
                max-width: 475px;
                height: 180px;
                opacity: 0.5;
                -webkit-filter: (80%); /* Safari 6.0 - 9.0 */
                filter: grayscale(80%);
            }
            & .bottom {
                flex-direction: column;
                align-items: flex-start;
                justify-content: space-between;
                gap: 2em;
            }
            & .bottom .links {
                flex-direction: row-reverse;
            }
        }
    }
    @media (321px <= width <= 375px) {
        .card_project .top {
            display: flex;
            flex-direction: column-reverse;
            align-items: center;
            justify-content: space-between;
        }
        .card_project {
            width: 100%;
