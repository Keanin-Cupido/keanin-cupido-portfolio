            height: 100%;
            max-height: 800px;
            padding: 1.75em 1.75em;
            
            & .top .image {
                transition: all 0.3s ease-in-out;
                width: 100%;
                max-width: 475px;
                height: 180px;
                opacity: 0.5;
                -webkit-filter: (80%); /* Safari 6.0 - 9.0 */
                filter: grayscale(80%);
            }
            & .bottom {
                flex-direction: column;
                align-items: flex-start;
                justify-content: space-between;
                gap: 2em;
            }
            & .bottom .links {
                flex-direction: row-reverse;
            }
        }
    }
    @media (376px <= width <= 425px) {
        .card_project .top {
            display: flex;
            flex-direction: column-reverse;
            align-items: center;
            justify-content: space-between;
        }
        .card_project {
            width: 100%;
            max-width: 1000px;
            height: 100%;
            max-height: 800px;
            padding: 2em 2em;
            
            & .top .image {
                transition: all 0.3s ease-in-out;
                width: 100%;
                max-width: 475px;
                height: 180px;
                opacity: 0.5;
                -webkit-filter: (80%); /* Safari 6.0 - 9.0 */
                filter: grayscale(80%);
            }
            & .bottom {
                flex-direction: column;
                align-items: flex-start;
                justify-content: space-between;
                gap: 2em;
            }
            & .bottom .links {
                flex-direction: row-reverse;
            }
        }
    }
</style>