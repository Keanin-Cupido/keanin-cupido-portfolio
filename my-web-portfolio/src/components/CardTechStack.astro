---
interface Props {
    icon?: string;
    name?: string;
    description?: string;
    btnInfo?: string[];
}

const {
    icon="react",
    name="React.js",
    description="A popular JavaScript library for building user interfaces, known for its component-based architecture and efficient rendering with a virtual DOM.",
    btnInfo=["Learn More", "https://react.dev/", true, true]
} = Astro.props;

import { Icon } from 'astro-icon/components';
import Button from './Button.astro';

---

<article class="card_techstack">
    <Icon name=`devicon:${icon}` />
    {name}
    {description}
    <Button 
        title=btnInfo[0]
        link=btnInfo[1]

    />
</article>

