---
interface Props {
    links?: string[];
    linksNames?: string[];
}

const {
    links=["Home", "Projects", "About"], 
    linksNames=["/", "/projects", "/about"]
} = Astro.props;

const currentPath = new URL(Astro.request.url).pathname;
console.log(currentPath);

import Image from 'astro/components/Image.astro';
import Button from './Button.astro';

// Images
import KeaninCupidoLogo from '../../public/logo.svg';
---

<nav class="navbar">
    <div class="circle_image">
        <a href={'/'}>
            <Image 
                src={KeaninCupidoLogo}
                alt={"logo"}
                width={25}
                height={25}
            />
            <p class="font-bold">K. Cupido</p>
        </a>
    </div>
    <ul class="links">
        {
            links.map((link, key) => (
                // currentPath == link.href ? "active" : ""
                <li class=`${currentPath === linksNames[key] ? 'highlighted_page' : ''}`>
                    <a href={linksNames[key]}>
                        {link}
                    </a>
                </li>
            ))
        }
    </ul>
    <Button 
        title="Contact"
        link="/contact"
        primary
        newTab={false}
    />
</nav>

<style>
    .navbar {
        width: 100%;
        max-width: 800px;
        max-height: 85px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        margin: 0 auto;
        background-color: rgba(59, 148, 255, 0.05);
        box-shadow: inset -15px -20px 70px -22px rgba(59, 148, 255, 0.075);
        border-radius: 50px;
        padding: 1em 2.25em;
        position: relative;
        z-index: 100;
    }
    .navbar .circle_image {
        transition: all 0.2s ease;
        & > a {
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: flex-start;
            gap: 1em;
            & > p {
                font-weight: 400;
                color: rgb(var(--very-light-blue));
                font-size: 0.75rem;
            }
        }
    }
    .navbar .circle_image:hover {
        opacity: 0.5;
        transform: scale(0.99);
    }
    .navbar .links {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 2.5em;
        font-size: 0.75rem;
    }
    .navbar .links li.highlighted_page {
        font-weight: 600;
        color: rgb(var(--light-blue-navbar));
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
        transition: all 0.2s ease;
    }
    .navbar .links li:hover {
        opacity: 0.8;
    }
    .navbar .links li:not(.highlighted_page) {
        transition: all 0.2s ease;
    }
    .navbar .links li:not(.highlighted_page):hover {
        transform: translateY(-2px);
        color: rgb(var(--very-light-blue));
    }
    .navbar .links li.highlighted_page:after {
        content: "";
        display: inline-block;
        width: 50px;
        height: 2px;
        background: linear-gradient(90deg, rgba(100, 170, 255, 0) 0%, rgba(100, 170, 255, 0.8) 50%, rgba(100, 170, 255, 0) 100%);
        position: absolute;
        bottom: -0.563em;
    }
</style>