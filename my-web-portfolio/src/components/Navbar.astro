---
interface Props {
    links?: string[];
    linksNames?: string[];
}

const {links=["Home", "Projects", "About"], linksNames=["/", "/projects", "/about"]} = Astro.props;

const currentPath = Astro.url.pathname;

import Image from 'astro/components/Image.astro';
import Button from './Button.astro';

// Images
import KeaninCupidoLogo from '../../public/logo.svg';
---

<nav class="navbar">
    <div class="circle_image">
        <a href={'/'}>
            <Image 
                src={KeaninCupidoLogo}
                alt={"logo"}
                width={45}
                height={45}
            />
        </a>
    </div>
    <ul class="links">
        {
            links.map((link, key) => (
                <li class=`${currentPath.includes(linksNames[key]) ? 'highlighted_page' : ''}`>
                    <a href={linksNames[key]}>
                        {link}
                    </a>
                </li>
            ))
        }
    </ul>
    <Button 
        title="Contact"
        link="/contact"
        primary
    />
</nav>

<style>
    .navbar {
        width: 100%;
        max-width: 600px;
        max-height: 85px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        margin: 0 auto;
        background-color: rgba(59, 148, 255, 0.05);
        border-radius: 50px;
        padding: 1.25em 1.563em;
    }
    .navbar .circle_image {
        transition: all 0.2s ease;
    }
    .navbar .circle_image:hover {
        opacity: 0.5;
        transform: scale(0.99);
    }
    .navbar .links {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
        gap: 2.5em;
        font-size: 0.75rem;
    }
    .navbar .links li.highlighted_page {
        font-weight: 600;
        color: rgb(var(--light-blue));
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
        transition: all 0.2s ease;
    }
    .navbar .links li:hover {
        opacity: 0.8;
    }
    .navbar .links li:not(.highlighted_page) {
        transition: all 0.2s ease;
    }
    .navbar .links li:not(.highlighted_page):hover {
        transform: translateY(-2px);
        color: rgb(var(--very-light-blue));
    }
    .navbar .links li.highlighted_page:after {
        content: "";
        display: inline-block;
        width: 50px;
        height: 2px;
        background: linear-gradient(90deg, rgba(59, 148, 255, 0) 0%, rgba(48, 120, 207, 1) 50%, rgba(59, 148, 255, 0) 100%);
        position: absolute;
        bottom: -0.563em;
    }
</style>