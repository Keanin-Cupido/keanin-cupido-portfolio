---
interface Props {
    title?: string;
    info?: string;
}

const {title="Client", info="Business"} = Astro.props;

---

<article>
    <h3>{title}</h3>
    <p>{info}</p>

    <div class="slot-container">
        <slot />
    </div>
</article>

<style>
    article {
        width: 100%;
        max-width: 200px;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        gap: 1em;
    }
    h3 {
        font-weight: 600;
        font-size: 1.15rem;
    }
    p {
        font-weight: 200;
        font-size: 1rem;
        opacity: 0.6;
    }
    .slot-container {
        width: 100%;
        display: flex;
        flex-direction: row;
        align-items: flex-start;
        justify-content: flex-start;
        gap: 0.5em;
    }
</style>