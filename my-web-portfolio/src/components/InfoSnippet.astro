---
export interface Props {
    title?: string;
    info?: string;
    class?: string;
}

const { title = "Client", info = "Business", class: className } = Astro.props;
---

<article class:list={["info-snippet", className, "w-full sm:max-w-[200px] flex flex-col items-start justify-center gap-2 sm:gap-4"]}>
    <h3 class="font-semibold text-base sm:text-lg m-0">{title}</h3>
    <p class="font-extralight text-sm sm:text-base opacity-60 m-0">{info}</p>
    <div class="w-full flex flex-row items-start justify-start gap-1 sm:gap-2">
        <slot />
    </div>
</article>