---
interface Props {
  className?: string;
}

const { className = '' } = Astro.props;
---

<div class={`divider ${className}`}></div>

<style>
  .divider {
    --divider-width: 95%;
    --divider-max-width: 1000px;
    --divider-height: 3px;
    --divider-margin: 7.75em auto;
    --divider-color-start: rgba(59, 148, 255, 0);
    --divider-color-middle: rgba(48, 120, 207, 1);

    display: block;
    width: var(--divider-width);
    max-width: var(--divider-max-width);
    margin: var(--divider-margin);
    height: var(--divider-height);
    background: linear-gradient(
      90deg,
      var(--divider-color-start) 0%,
      var(--divider-color-middle) 50%,
      var(--divider-color-start) 100%
    );
  }

  @media (max-width: 768px) {
    .divider {
      --divider-width: 90%;
      --divider-height: 2px;
    }
  }

  @media (max-width: 425px) {
    .divider {
      --divider-width: 85%;
    }
  }

  @media (max-width: 375px) {
    .divider {
      --divider-width: 80%;
      --divider-height: 1px;
    }
  }
</style>